<h3 class="text-center"> Upload your artwork </h3>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-sm-offset-3 col-xs-offset-3">
      <%= simple_form_for @artwork do |f| %>
        <%= f.input :name, label: 'Artwork title', placeholder: 'your title'  %>
        <%= f.input :description, label: 'Description' %>
        <%= f.input :price, label: 'Your price'%>
        <%= f.input :genre, collection: Artwork.genres, as: :radio_buttons, checked: Artwork.genres.first %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>

